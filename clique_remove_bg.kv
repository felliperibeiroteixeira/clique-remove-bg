#:set cor_texto .57, .57, .57, 1
#:set cor_btn .20, .20, .20, 1
#:set cor_btn_press .30, .30, .30, 1

<BtnEditar@Button>:
	icone: ''
	background_normal: ''
	background_down: ''			
	background_color: cor_btn
	on_press: self.background_color = cor_btn_press
	on_release: self.background_color = cor_btn
	Image:
		source: 'icones/' + self.parent.icone
		x: self.parent.center_x - 32
		y: self.parent.center_y - 32
		size_hint: None, None
		width: 64
		height: 64
			
<PainelImportar@Screen>:
	BoxLayout:
		padding: 15
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				Image:
					source: 'icones/arquivo_de_imagem.png'
					size_hint: 1, .4
			Label:
				id: mensagem
				color: cor_texto
				text: 'Arraste uma imagem aqui'
				font_size: 22
				markup: True
				halign: 'center'
				valign: 'top'
				text_size: self.size

<PainelEditar@Screen>:
	BoxLayout:
		padding: 15
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				id: area_img	
			BoxLayout:
				size_hint: 1, None
				height: 80
				padding: 15
				spacing: 5
				BtnEditar:
					icone: 'remover_bg.png'
					on_release: root.btnRemover_bg()
				BtnEditar:
					icone: 'in√≠cio.png'		
					on_release: root.btnIniciar()
				BtnEditar:
					icone: 'exportar.png'
					on_release: root.btnExportar()